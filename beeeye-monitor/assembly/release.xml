<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>content</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <!-- 配置文件 -->
            <directory>target/classes</directory>  <!-- 指定要包含的目录，必须是目录 -->
            <outputDirectory>monitor/conf</outputDirectory>   <!-- 指定当前要包含的目录的目的地 -->
            <includes>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>other/start/</directory>  <!-- 指定要包含的目录，必须是目录 -->
            <outputDirectory>monitor/bin</outputDirectory>   <!-- 指定当前要包含的目录的目的地 -->
            <includes>
                <include>**/*.*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>monitor/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>

</assembly>